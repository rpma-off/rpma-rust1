{
  "name": "rpma-rust",
  "version": "0.1.0",
  "description": "RPMA v2 - Application desktop de gestion d'interventions PPF",
  "private": true,
  "scripts": {
    "dev": "npm run tauri dev",
    "dev:types": "npm run types:sync && npm run tauri dev",
    "dev:strict": "npm run types:sync && npm run types:drift-check && npm run tauri dev",
    "build": "npm run types:sync && npm run tauri build",
    "tauri": "tauri",
    "types:sync": "cd src-tauri && cargo run --bin export-types | node ../scripts/write-types.js",
    "types:watch": "node scripts/watch-types.js",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "frontend:lint": "cd frontend && npm run lint",
    "frontend:type-check": "cd frontend && npm run type-check",
    "frontend:encoding-check": "cd frontend && npm run encoding:check",
    "backend:build": "cd src-tauri && cargo build",
    "backend:build:release": "cd src-tauri && cargo build --release",
    "backend:check": "node -e \"require('fs').mkdirSync('frontend/.next', { recursive: true })\" && cd src-tauri && cargo check",
    "backend:clippy": "node -e \"require('fs').mkdirSync('frontend/.next', { recursive: true })\" && cd src-tauri && cargo clippy",
    "backend:fmt": "cd src-tauri && cargo fmt",
    "types:validate": "node scripts/validate-types.js",
    "types:drift-check": "node scripts/check-type-drift.js",
    "types:ci-drift-check": "node scripts/ci-type-drift-check.js",
    "types:generate-docs": "node scripts/generate-type-docs.js",
    "ci:validate": "bash scripts/ci-type-check.sh",
    "bundle:analyze": "cd frontend && ANALYZE=true npm run build",
    "bundle:check-size": "node scripts/check-bundle-size.js",
    "performance:test": "node scripts/performance-regression-test.js",
    "performance:update-baseline": "node scripts/performance-regression-test.js --update-baseline",
    "security:audit": "node scripts/security-audit.js",
    "duplication:detect": "node scripts/detect-duplication.js",
    "architecture:check": "node scripts/architecture-check.js --strict",
    "architecture:check:strict": "node scripts/architecture-check.js --strict",
    "backend:boundaries:check": "node scripts/enforce-backend-module-boundaries.js",
    "backend:detect-cross-domain": "node scripts/detect-cross-domain-imports.js",
    "backend:detect-cross-domain:all": "node scripts/detect-cross-domain-imports.js --include-tests",
    "backend:detect-unused-mods": "node scripts/detect-unused-rust-mods.js",
    "validate:architecture": "node scripts/validate-bounded-contexts.js --strict",
    "validate:bounded-contexts": "node scripts/validate-bounded-contexts.js --strict",
    "validate:bounded-contexts:strict": "node scripts/validate-bounded-contexts.js --strict",
    "boundary:report": "node scripts/boundary-coverage-report.js --strict",
    "boundary:report:strict": "node scripts/boundary-coverage-report.js --strict",
    "boundary:enforce": "node scripts/boundary-coverage-enforce.js --strict",
    "boundary:enforce:strict": "node scripts/boundary-coverage-enforce.js --strict",
    "migration:audit": "node scripts/bounded-context-migration-audit.js --strict",
    "migration:audit:strict": "node scripts/bounded-context-migration-audit.js --strict",
    "quality:check": "npm run frontend:lint && npm run frontend:type-check && npm run boundary:enforce && npm run validate:bounded-contexts && npm run backend:check && npm run backend:clippy && npm run backend:fmt -- --check && npm run architecture:check && npm run backend:boundaries:check && npm run migration:audit",
    "maintainability:audit": "node scripts/maintainability-audit.js",
    "maintainability:audit:strict": "node scripts/maintainability-audit.js --strict",
    "code-review:check": "node scripts/code-review-check.js",
    "install": "npm run frontend:install",
    "clean": "npm run frontend:clean && cd src-tauri && cargo clean",
    "frontend:clean": "cd frontend && rm -rf node_modules .next out",
    "fix:encoding": "node scripts/fix-encoding.js",
    "ipc:consistency-check": "node scripts/ipc-consistency-check.js",
    "ipc:production-gate": "node scripts/ipc-production-gate.js",
    "git:start-feature": "node scripts/git-workflow.js start-feature",
    "git:sync-feature": "node scripts/git-workflow.js sync-feature",
    "git:finish-feature": "node scripts/git-workflow.js finish-feature",
    "git:cleanup-feature": "node scripts/git-workflow.js cleanup-feature",
    "git:guard-main": "node scripts/git-workflow.js guard-main",
    "prepare": "husky",
    "db:repair-signup-trigger": "node scripts/repair_user_signup_trigger.js"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.1.0",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.6.2",
    "jsdom": "^27.1.0"
  }
}
